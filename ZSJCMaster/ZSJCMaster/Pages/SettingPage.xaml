<UserControl x:Class="ZSJCMaster.Pages.SettingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:helper="clr-namespace:ZSJCMaster.Helpers"
             mc:Ignorable="d" x:Name="settingPage"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <!-- TODO: set @SelectedSource -->
        <mui:ModernTab Layout="List" Margin="0 -10 0 0" SelectedSource="Contents\ControlPadContent.xaml">
            <mui:ModernTab.Links>
                <!-- TODO: set @Source -->
                <mui:Link DisplayName="控制板" Source="Contents\ControlPadContent.xaml"/>
                <mui:Link DisplayName="相机" Source="Contents\CameraContent.xaml"/>
                <mui:Link DisplayName="报警" Source="Contents\AlarmContent.xaml"/>
                <!--
                <mui:Link DisplayName="TCP" />
                <mui:Link DisplayName="其他" />
                -->
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
